<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#253334"
    tools:context=".PlaceNameActivity">


    <Button
        android:id="@+id/button3"
        android:layout_width="247dp"
        android:layout_height="50dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/buton"
        android:onClick="next"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/nameDetailText"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/com_facebook_auth_dialog_background"
        android:backgroundTint="#253334"
        android:backgroundTintMode="src_over"
        android:ems="10"
        android:hint="Marka"
        android:inputType="text"
        android:nestedScrollingEnabled="false"
        android:outlineProvider="none"
        android:singleLine="false"
        android:textColor="#FFFFFF"
        android:textColorHint="#B8B4B4"
        app:guidelineUseRtl="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/typeText"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:background="@drawable/com_facebook_auth_dialog_background"
        android:backgroundTint="#253334"
        android:ems="10"
        android:hint="Model"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#B8B4B4"
        android:textColorLink="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameDetailText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="387dp"
        android:layout_height="173dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="17dp"
        android:elevation="4dp"
        android:onClick="selectimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image" />

    <EditText
        android:id="@+id/atmosphereText"
        android:layout_width="379dp"
        android:layout_height="185dp"
        android:background="@drawable/com_facebook_auth_dialog_background"
        android:backgroundTint="#253334"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Ã–zellikleri"
        android:inputType="textMultiLine"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFCFC"
        android:textColorHint="#B8B4B4"
        android:textIsSelectable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typeText" />






</androidx.constraintlayout.widget.ConstraintLayout>