<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#253334"
    tools:context=".SignUpActivitiy">

    <EditText
        android:id="@+id/usernameSignUpText"
        android:layout_width="373dp"
        android:layout_height="45dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="#FDF8F8"
        android:ems="10"
        android:fontFamily="@font/alegreya"
        android:hint="E Posta"
        android:inputType="text"
        android:textColor="#FFFCFC"
        android:textColorHint="#FAFAFA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/button2"
        android:layout_width="323dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/buton"
        android:backgroundTint="#7C9A92"
        android:fontFamily="@font/alegreya_sans_medium"
        android:onClick="signUp2"
        android:text="KAYDOL"
        android:textColor="#FBF7F7"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordSignUpText" />

    <EditText
        android:id="@+id/passwordSignUpText"
        android:layout_width="371dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:fontFamily="@font/alegreya"
        android:hint="Åžifre"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFCFC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameSignUpText" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="91dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="69dp"
        android:fontFamily="@font/alegreya"
        android:text="Kaydol"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>